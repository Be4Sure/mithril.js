{
  "name": "mithril",
  "version": "2.0.4",
  "description": "A framework for building brilliant applications",
  "author": "Leo Horie",
  "license": "MIT",
  "unpkg": "mithril.min.js",
  "repository": "github:MithrilJS/mithril.js",
  "scripts": {
    "precommit": "lint-staged",
    "watch:docs": "node scripts/generate-docs --watch",
    "watch:docs-lint": "node scripts/lint-docs --watch",
    "build": "run-p build:js build:readme",
    "build:docs": "node scripts/generate-docs",
    "build:readme": "node scripts/compute-bundle-sizes --save",
    "build:js": "run-p build:js:**",
    "build:js:core": "node scripts/build-rollup.js",
    "build:js:stream": "node scripts/minify-stream",
    "cleanup:lint": "rimraf .eslintcache .lint-docs-cache",
    "lint": "run-s -cn lint:**",
    "lint:js": "eslint . --cache",
    "lint:docs": "node scripts/lint-docs --cache",
    "perf": "node performance/test-perf.js",
    "test": "run-s lint test:js",
    "test:js": "node_modules/.bin/ospec",
    "cover": "istanbul cover --print both node_modules/.bin/ospec",
    "release": "npm version -m 'v%s'",
    "version": "npm run build && git add mithril.js mithril.min.js stream.js stream.min.js README.md"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@babel/parser": "^7.7.5",
    "benchmark": "^2.1.4",
    "chokidar": "^3.2.1",
    "escape-string-regexp": "^2.0.0",
    "eslint": "^6.5.1",
    "gh-pages": "^2.1.1",
    "glob": "^7.1.4",
    "html-minifier": "^4.0.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^9.4.1",
    "locater": "^1.3.0",
    "marked": "^0.7.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "ospec": "^4.0.1",
    "pinpoint": "^1.1.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^3.0.0",
    "rollup": "^2.45.2",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^6.3.0",
    "terser": "^4.3.4"
  },
  "bin": {
    "ospec": "./ospec/bin/ospec"
  },
  "lint-staged": {
    "*.js": [
      "eslint . --fix",
      "git add"
    ]
  }
}
